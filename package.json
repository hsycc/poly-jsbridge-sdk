{
  "name": "easy-jsbridge-brigde",
  "version": "1.0.0",
  "description": "A simple jsbridge protocol scheme.",
  "main": "index.js",
  "browser": "browser/easyJsbridgeSdk.min.js",
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "cover": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec dist/tests/*.js && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test:dev": "mocha --bail --exit  --reporters spec  --require ts-node/register  tests/*.test.ts",
    "test": "mocha --bail --exit  --reporters spec dist/tests/*.js",
    "build-browser": "webpack --config webpack.dev.js && webpack --config webpack.prod.js",
    "build": "npm run clean && tsc -p  tsconfig.json && npm run build-browser",
    "clean": "rm -rf ./dist"
  },
  "keywords": [
    "typescript"
  ],
  "author": "hsycc",
  "license": "Apache Licence 2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hsycc/easy-jsbridge-brigde.git"
  },
  "bugs": {
    "url": "https://github.com/hsycc/easy-jsbridge-brigde/issues"
  },
  "homepage": "https://github.com/hsycc/easy-jsbridge-brigde#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.2.19",
    "@types/jsdom": "^16.2.13",
    "@types/mocha": "^7.0.2",
    "@types/node": "^16.11.7",
    "chai": "^4.3.4",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.1.1",
    "copy-webpack-plugin": "^9.1.0",
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "istanbul": "^0.4.5",
    "jsdom": "^18.1.0",
    "mocha": "^9.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^5.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
